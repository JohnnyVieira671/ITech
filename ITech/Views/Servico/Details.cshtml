@model Servico


<div class="container">
    <div class="row">
        <div class="card">

            <div class="card-block">
                <h2 class="card-title"> @Model.DescricaoCurta</h2>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>

                <p class="btn btn-group align-content-lg-end">

                    <a asp-area="" asp-controller="Servico" asp-action="List" class="btn btn-outline-info">
                        Ver todos os Servicos
                    </a>

                    <a class="btn btn-primary" id="cardButton" asp-area="" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItemNoCarrinhoCompra" asp-route-servicoId="@Model.ServicoId">
                        Adicionar @Model.DescricaoCurta ao carrinho
                    </a>

                </p>
            </div>

        </div>
    </div>
</div>



