    <form id="deleteForm" asp-area="" asp-controller="ManipulaPedidos" asp-action="Delete">
        <input type="hidden" asp-for="PedidoId" />
        <input id="btnSubmit" class="btn btn-danger" type="submit" value="🗑️ Delete" />
        <span id="loadingMessage" style="display:none; font-weight:bold; margin-left:10px;">
            Carregando, por favor aguarde...
        </span>

        <a asp-area="" asp-controller="ManipulaPedidos" asp-action="Index" class="btn btn-secondary">🔙 Voltar à Lista</a>
        
    </form>
</div>


<script>
    document.getElementById('deleteForm').addEventListener('submit', function () {
      // Esconde o botão
      document.getElementById('btnSubmit').style.display = 'none';
      // Mostra a mensagem carregando
      document.getElementById('loadingMessage').style.display = 'inline';
    });
</script>
