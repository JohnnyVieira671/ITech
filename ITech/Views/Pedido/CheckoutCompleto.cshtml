@model Pedido

<div class="container">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do Pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do Pedido: <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>

                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <th>@item.Quantidade</th>
                        <th>@item.Servico.DescricaoCurta</th>
                        <th>@item.Servico.Valor</th>
                    </tr>
                }
            </table>

            <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("c2"))</strong></h4>
        </div>
    </div>
</div>

<div class="form-group" style="text-align : center">

    <h3>
        <a class="nav-link text-info" asp-area="" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>

</div>



