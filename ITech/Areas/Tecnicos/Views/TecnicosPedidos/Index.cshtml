@model ReflectionIT.Mvc.Paging.PagingList<ITech.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h2>Pedidos</h2>
<hr />
<br />

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Filtrar Pedidos" 
    value="@Model.RouteValue["Filter"]"/>
    <button type="submit" class="btn btn-info" style="margin-top:10px">
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
</button>

</form>

<br />
<br />

<h4>Total de Pedidos : @Model.TotalRecordCount</h4>

<br />
<div>
    <vc:pager paging-list ="@Model"></vc:pager>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEnviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEntregueEm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.PedidoEnviado)
            </td>
                <td>
                    @(item.PedidoEntregueEm?.ToString("dd/MM/yyyy HH:mm") ?? "—")
                </td>
                <td>
                    <a asp-area="Tecnicos" asp-controller="TecnicosPedidos" asp-action="Edit" asp-route-id="@item.PedidoId" class="btn btn-sm btn-warning me-1">
                        ✏️ Editar Entrega
                    </a>

                    <a asp-area="Tecnicos" asp-controller="TecnicosPedidos" asp-action="Details" asp-route-id="@item.PedidoId" class="btn btn-sm btn-primary me-1">
                        🔍 Detalhes
                    </a>

                    <a asp-area="Tecnicos" asp-controller="TecnicosPedidos" asp-action="Delete" asp-route-id="@item.PedidoId" class="btn btn-sm btn-danger me-1">
                        🗑️ Deletar
                    </a>

                    <a asp-area="Tecnicos" asp-controller="TecnicosPedidos" asp-action="PedidoServicos" asp-route-id="@item.PedidoId" class="btn btn-sm btn-success">
                        📦 Ver Itens
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
