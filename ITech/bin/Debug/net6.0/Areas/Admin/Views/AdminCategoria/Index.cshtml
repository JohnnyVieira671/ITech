@model IEnumerable<ITech.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h2>Categorias</h2>
<hr />
<br />

<h4>
    <a asp-action="Create">Criar nova Categoria</a>
</h4>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-warning me-1">
                        ✏️ Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-primary me-1">
                        🔍 Detalhes
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-danger">
                        🗑️ Deletar
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
